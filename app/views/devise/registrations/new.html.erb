<%= form_for(resource, :html => {:class => "form_style"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<p class="field">
  <%= f.email_field :email, :placeholder => "Email" %></div>
	<i class="icon-user icon-large"></i>
	</p>
	<p class="field">
  <%= f.password_field :password, :placeholder => "Password" %>
	<i class="icon-lock icon-large"></i>
	</p>
	<p class="field">
  <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></div>
	<i class="icon-lock icon-large"></i>
	</p>
	 <p class="submit">
		<%= f.submit ">" %>
	</p>
<% end %>
<div id="sign_links">
<%= render "devise/shared/links" %>
</div>