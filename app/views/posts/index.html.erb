<h1>DBC Overflow: A Place for Public Feedback</h1>
<div class="post_index">
<% if user_signed_in? %>
  <h2><%= link_to "Give Feedback", new_post_path  %></h2>
<% end %>
<ul class="posts_list">
  <% @posts.each do |post| %>
  <div class="post">
    <li class="post_title">[<%= post.score %>] <%= link_to post.title, post_path(post.id) %> </li>
    <ul><li class="post_body"><%= post.text %> </li></ul>
    <% if user_signed_in? %>
      <ul class="post_body">
      <li class="post_author">A suggestion by <%= link_to post_author(post.user_id), user_path(post.user_id) %>.</li>
    </ul>
  </div>
    <% end %>
  <% end %>
</ul>
</div>